{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "noLib": false,
    "rootDir": "src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
