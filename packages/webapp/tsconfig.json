{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["astro/client"],
    "baseUrl": ".",
    "paths": {
        "@layouts/*": ["./src/layouts/*"],
        "@components/*": ["./src/components/*"],
        "@screens/*": ["./src/components/screens/*"],
        "@assets/*": ["./src/assets/*"]
    }
  }
}
