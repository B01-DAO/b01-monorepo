---
import TextEffect from '@components/TextEffect.astro';
---

<header class='p-2 flex w-full justify-between items-center'>
    <section class='p-2 flex items-center'>
        <span
            class='glyph h-8 w-8 select-none mr-2 flex justify-center items-center font-sans font-black text-lg text-white rounded border-2 border-purple-600'
            >A
        </span>
        <TextEffect class='tracking-widest'>AB01</TextEffect>
    </section>

    <section class='p-2 flex items-center gap-8'>
        <a href='#'>Playground</a>
        <a href='#'>Team</a>
        <a href='#'>Docs</a>

        <button type='button'>ðŸŒž</button>

        <button
            type='button'
            class='py-2 px-6 rounded-md text-white uppercase font-sans font-bold connect-button'
            >Connect Wallet
        </button>
    </section>
</header>

<style>
    header {
        position: fixed;
        top: 0;
        z-index: 1;
    }

    .glyph {
        background: radial-gradient(
            117.71% 117.71% at 0% 0%,
            #ffb393 0%,
            #fc9ee7 36.98%,
            #a442f1 100%
        );
    }

    a {
        @apply flex justify-center items-center uppercase text-gray-100 font-bold font-sans;
    }

    .connect-button {
        background: linear-gradient(89.59deg, #4e70e8 -12.27%, #6743fa 107.42%);
    }
</style>
