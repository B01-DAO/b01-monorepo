{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "lib": ["es2021", "DOM", "DOM.Iterable"],
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react-jsx",

        "moduleResolution": "node",

        "allowJs": true,
        "checkJs": false,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "noEmit": false
    },
    "include": ["./src"],
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "files": true
    }
}
