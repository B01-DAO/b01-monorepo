{
    "compilerOptions": {
        "declaration": true,
        "lib": ["es2021", "DOM", "DOM.Iterable"],
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react-jsx",

        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@init": ["./init"]
        },
        "moduleResolution": "node",

        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "noEmit": true
    },
    "include": ["./src/**/*"],
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "files": true
    }
}
